<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent" android:layout_height="match_parent"
             android:orientation="vertical"
             tools:context=".BlankFragment">

    <FrameLayout android:layout_width="match_parent" android:layout_height="400dp">


        <ImageView
                android:id="@+id/img"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher2"
                android:background="@android:color/black"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        <com.yoriz.yorizdemo.DimmedLayerView
                android:id="@+id/dv"
                app:dimmed_color="@android:color/holo_red_dark"
                android:alpha="150"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
    </FrameLayout>

    <SeekBar
            android:id="@+id/ap"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="255"/>

    <LinearLayout
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <Button
                android:id="@+id/one"
                android:text="16:9"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <Button
                android:id="@+id/two"
                android:text="4:3"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <Button
                android:id="@+id/three"
                android:text="1:1"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <Button
                android:id="@+id/four"
                android:text="3:2"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <Button
                android:id="@+id/c_one"
                android:text="红"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <Button
                android:id="@+id/c_two"
                android:text="黄"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <Button
                android:id="@+id/c_three"
                android:text="蓝"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <Button
                android:id="@+id/c_four"
                android:text="白"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </LinearLayout>
    <ImageView
            android:scaleType="fitCenter"
            android:id="@+id/bmp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
</LinearLayout>